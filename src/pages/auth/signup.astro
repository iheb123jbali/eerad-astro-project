---
import Container from "@components/container.astro";
import RootLayout from "@layouts/RootLayout.astro";
---

<RootLayout title="التسجيل">
  <div class="bg-primary-soft flex flex-1 flex-col justify-center relative overflow-hidden">
    <div class="absolute top-10 right-20 opacity-60">
      <svg width="704" height="854" viewBox="0 0 704 854" fill="none" class="text-primary-accent" xmlns="http://www.w3.org/2000/svg">
        <circle cx="352" cy="352" r="352" fill="url(#paint0_linear_51_188)"></circle>
        <circle cx="496.982" cy="646.982" r="169" transform="rotate(-75 496.982 646.982)" fill="url(#paint1_linear_51_188)"></circle>
        <defs>
          <linearGradient id="paint0_linear_51_188" x1="623.047" y1="106.25" x2="352.723" y2="542.094" gradientUnits="userSpaceOnUse">
            <stop offset="0.113181" stop-color="currentColor"></stop>
            <stop offset="1" stop-color="currentColor" stop-opacity="0"></stop>
          </linearGradient>
          <linearGradient id="paint1_linear_51_188" x1="627.115" y1="528.994" x2="497.329" y2="738.249" gradientUnits="userSpaceOnUse">
            <stop offset="0.113181" stop-color="currentColor"></stop>
            <stop offset="1" stop-color="currentColor" stop-opacity="0"></stop>
          </linearGradient>
        </defs>
      </svg>
    </div>
    <Container class="z-10 relative">
      <div class="max-w-lg flex justify-center">
        <a href="/" class="text-lg">
          <span class="font-bold text-primary-strong text-3xl">ايراد</span>
        </a>
      </div>
      <div class="bg-white max-w-lg shadow-xl p-10 rounded-md flex flex-col my-8">
        <div class="text-center">
          <h1 class="text-4xl font-bold">التسجيل</h1>
          <p class="text-default text-sm mt-2">
            لنبدأ تجربتك المجانيةلمدة 14 يومًا
          </p>
        </div>

        <div class="flex flex-col gap-4 mt-6">
          <form action="#" method="POST" class="flex flex-col gap-4">
            <div class="flex flex-col">
              <label for="full_name" class="text-sm sr-only">الاسم كامل</label>
              <input
                type="text"
                name="full_name"
                placeholder="الاسم كامل"
                class="border border-default-soft/30 placeholder:text-sm placeholder:text-default rounded-md px-3 py-2.5 focus:border-primary focus:ring-1 focus:ring-primary outline-none"
                required
              />
            </div>
            <div class="flex flex-col">
              <label for="company_name" class="text-sm sr-only">اسم الشركة / الجهة</label>
              <input
                type="text"
                name="company_name"
                placeholder="اسم الشركة / الجهة"
                class="border border-default-soft/30 placeholder:text-sm placeholder:text-default rounded-md px-3 py-2.5 focus:border-primary focus:ring-1 focus:ring-primary outline-none"
                required
              />
            </div>
            <div class="flex flex-col">
              <label for="email" class="text-sm sr-only">البريد الإلكتروني</label>
              <input
                type="email"
                name="email"
                placeholder="البريد الإلكتروني"
                class="border border-default-soft/30 placeholder:text-sm placeholder:text-default rounded-md px-3 py-2.5 focus:border-primary focus:ring-1 focus:ring-primary outline-none"
                required
              />
            </div>
            <div class="flex flex-col">
              <label for="phone_number" class="text-sm sr-only">رقم الجوال</label>
              <input
                type="text"
                name="phone_number"
                placeholder="رقم الجوال"
                class="border border-default-soft/30 placeholder:text-sm placeholder:text-default rounded-md px-3 py-2.5 focus:border-primary focus:ring-1 focus:ring-primary outline-none"
                required
              />
            </div>
            <div class="flex flex-col">
              <label for="employee_count" class="text-sm">عدد الموظفين</label>

              <select
                name="employee_count"
                class="border border-default-soft/30 placeholder:text-sm placeholder:text-default rounded-md px-3 py-2.5 focus:border-primary focus:ring-1 focus:ring-primary outline-none"
              >
                <option value="1-3">1-3</option>
                <option value="3-5">3-5</option>
                <option value="5-80">5-80</option>
                <option value="80-300">80-300</option>
                <option value="more_than_300">أكثر من 300</option>
              </select>
            </div>
            <button
              type="submit"
              class="bg-primary text-white rounded-md font-semibold px-2 py-3.5 hover:bg-primary-strong">
              التسجيل مجانًا
            </button>
          </form>
        </div>
      </div>
    </Container>
  </div>
</RootLayout>
