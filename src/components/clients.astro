---
import Container from "@components/container.astro";
import { Image } from "astro:assets";
import Ridoria from "assets/logo1.png";
import Alterbone from "assets/logo2.png";
import Tinygone from "assets/logo3.png";
import Waverio from "assets/logo4.png";
import Incanto from "assets/logo5.png";
import qswer from "assets/logo6.png";
const { align = "center" } = Astro.props;
const clients = [
  {
    logo: Ridoria,
    alt: "Ridoria Logo",
  },
  {
    logo: Alterbone,
    alt: "Alterbone Logo",
  },
  {
    logo: Tinygone,
    alt: "Tinygone Logo",
  },
  {
    logo: Waverio,
    alt: "Waverio Logo",
  },
  {
    logo: Incanto,
    alt: "Incanto Logo",
  },
  {
    logo: qswer,
    alt: "Incanto Logo",
  },
];
---

<!--====================== Our Clients ======================-->
<div class="py-24 border-t">
  <Container>
    <div class:list={["mb-16 text-primary-strong", align === "center" && "text-center"]}>
      <h1 class=" text-primary-strong text-3xl lg:text-4xl font-bold lg:tracking-tight">
        <span class="rounded-md  m-0 p-0 inset-0 bg-[linear-gradient(180deg,transparent_60%,rgba(0,159,82,0.2)_40%)]">

        <slot name="title ">
          
          شركاء النجاح مع ايراد
        </slot>
      </span>
      </h1>

    </div>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-10">
      {
        clients.map((client) => (
          <div class="flex justify-center items-center">
            <Image src={client.logo} alt={client.alt} class="w-full max-w-[150px] opacity-90 hover:opacity-50 transition-opacity" />
          </div>
        ))
      }
    </div>
  </Container>
</div>
<!--//End Our Clients --> 
